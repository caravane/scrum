{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Boards</h1>

    <table class="records_list table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th class="tiny">Id</th>
                <th>Name</th>
                <th class="tiny"></th>
                <th class="tiny"></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('board_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    <a href="{{ path('board_show', { 'id': entity.id }) }}"><i class="fa fa-eye" alt="show" title="show" ></i></a>
                </td>
                <td>
                        <a href="{{ path('board_edit', { 'id': entity.id }) }}"><i class="fa fa-edit" alt="edit" title="edit" ></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('board_new') }}" class="btn btn-primary">
                {{"New board"|trans}}
            </a>

    {% endblock %}
