{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Project</h1>

    <table class="table table-striped table-bordered table-condensed records_list">
        <thead>
            <tr>
                <th class="tiny">Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Leader</th>
                <th>Boards</th>
                <th>Users</th>
                <th class="tiny"></th>
                <th class="tiny"></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.leader.username }}</td>
                <td>{% for user in entity.user %}<li>{{user.username}}</li>{% endfor %}</td>
                <td>{% for board in entity.board %}<li>{{board.name}}</li>{% endfor %}</td>
                <td>
                    <a href="{{ path('project_show', { 'id': entity.id }) }}"><i class="fa fa-eye" alt="show" title="show" ></i></a>
                </td>
                <td>
                        <a href="{{ path('project_edit', { 'id': entity.id }) }}"><i class="fa fa-edit" alt="edit" title="edit" ></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a href="{{ path('project_new') }}" class="btn btn-primary">
                Create a new entry
            </a>

    {% endblock %}
