{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User</h1>

    <table class="records_list table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th class="tiny">Id</th>
                <th>Userame</th>
                <th>Email</th>
                <th>Projects</th>
                <th class="tiny"></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('board_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{% for project in user.project  %} <li><a href="{{path('project_edit' , {'id': project.id})}}">{{project.name}}</a> </li> {% endfor %}</td>

                <td>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}"><i class="fa fa-edit" alt="edit" title="edit" ></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('user_new') }}" class="btn btn-primary">
                {{"New user"|trans}}
            </a>

    {% endblock %}
