{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Issue list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Summary</th>
                <th>Priority</th>
                <th>Duedate</th>
                <th>Component</th>
                <th>Environment</th>
                <th>Description</th>
                <th>Original_estimate</th>
                <th>Remaining_estimate</th>
                <th>Labels</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('issue_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.summary }}</td>
                <td>{{ entity.priority }}</td>
                <td>{% if entity.dueDate %}{{ entity.dueDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.component }}</td>
                <td>{{ entity.environment }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.originalestimate }}</td>
                <td>{{ entity.remainingestimate }}</td>
                <td>{{ entity.labels }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('issue_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('issue_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('issue_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
